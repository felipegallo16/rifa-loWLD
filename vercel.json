{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/health", "destination": "/api/health" },
    { "source": "/api/health", "destination": "/api/health" },
    { "source": "/rifas", "destination": "/api/rifas" },
    { "source": "/api/rifas", "destination": "/api/rifas" }
  ]
} 