{
  "name": "world-rifa-lo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "worldcoin-miniapp"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:miniapp\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:miniapp": "cd worldcoin-miniapp && npm run dev",
    "build": "npm run build:backend && npm run build:frontend && npm run build:miniapp",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:miniapp": "cd worldcoin-miniapp && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  }
} 